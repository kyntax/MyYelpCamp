<%- include("../partials/header.ejs") %>

<div class="container">
    <h1 class="text-center m-4">Edit <%=campground.name%></h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" placeholder="Name"
                value="<%=campground.name%>" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="campground[price]" placeholder="Price"  value="<%=campground.price%>" min="0.01" step="0.01" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campground[imageURL]" placeholder="imageURL"
                value="<%=campground.imageURL%>" required>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="campground[description]"
                placeholder="Type some description about the image..."><%=campground.description%></textarea>
        </div>
        <button class="btn btn-lg btn-success mb-2 btn-block">Submit</button>
    </form>
</div>

<%- include("../partials/footer.ejs") %>